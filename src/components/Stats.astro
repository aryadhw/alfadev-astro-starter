---
import FeatherIcon from "./react/FeatherIcon";

export interface StatItem {
  number: string;
  label: string;
  icon: string;
}

export interface Props {
  stats: StatItem[];
}

const { stats } = Astro.props;
---

<section class="section">
  <div class="container">
    <div class="row g-4">
      {stats.map((stat) => (
        <div class="col-12 sm:col-6 lg:col-3">
          <div class="flex items-center gap-4 rounded-lg border border-border p-6 bg-surface hover:shadow-lg transition-shadow duration-300">
            <div class="flex h-12 w-12 items-center justify-center rounded-lg bg-surface-secondary">
              <FeatherIcon client:load name={stat.icon} className="h-6 w-6 text-accent" />
            </div>
            <div class="flex-1">
              <h3 class="text-2xl font-bold text-text mb-1">{stat.number}</h3>
              <p class="text-sm text-text-secondary">{stat.label}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
